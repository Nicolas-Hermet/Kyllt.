<h1>Home#index</h1>

<p>Find me in app/views/home/index.html.erb</p>

<ul>
	<% if mecene_signed_in? %>
	
	<li>
		<%= link_to "Sign out", destroy_mecene_session_path, method: :delete %>
	</li>
	<li>
		You're logged with the following email : <%= current_mecene.email %>.
	</li>
	<li>
		<%= link_to "Edit your account", edit_mecene_registration_path %>
	</li>

	<% else %>
	
	<li>
		<%= link_to "Sign in", new_mecene_session_path %>
	</li>
	<li>
		<%= link_to "Sign up", new_mecene_registration_path %>
	</li>
		
	<% end %>
</ul>