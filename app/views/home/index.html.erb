<section class="py-0" id="page-signup">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 px-0">
        <div class="sticky-top h-lg-100vh py-9">
          <div class="bg-holder" style="background: url(<%= asset_path '8.jpg' %>) no-repeat; background-size: cover;" data-zanim-trigger="scroll" data-zanim-lg='{"animation":"zoom-out-slide-right","delay":0.4}'>
            <div class="mecenes-left">
              <h2 data-rellax-speed="8" class="parallax"><span class="white-mecene">Mécène</span></h2>
                <ul data-rellax-speed="8" class="parallax">
                	<% if mecene_signed_in? %>
                	<li><%= link_to "Sign out", destroy_mecene_session_path, method: :delete, class: "white-mecene", class:"li-signup" %></li>
                	<li class="login-mail">You're logged with the following email : <%= current_mecene.email %>.</li>
                	<li><%= link_to "Edit account", edit_mecene_registration_path, class: "white-mecene", class:"li-signup" %></li>
                	<% else %>
                	<li><%= link_to "Log in", new_mecene_session_path, class: "white-mecene", class:"li-signup" %></li>
                	<li><%= link_to "Sign up", new_mecene_registration_path, class: "white-mecene", class:"li-signup" %></li>
                	<% end %>
              </div>
          </div>
          <!--/.bg-holder-->
        </div>
      </div>
      <div class="col-lg-6 bg-white py-6">
        <div class="row h-100 align-items-center justify-content-center">
          <div class="bg-holder" style="background: url(<%= asset_path '8.1.jpg' %>) no-repeat; background-size: cover;" data-zanim-trigger="scroll" data-zanim-lg='{"animation":"zoom-out-slide-right","delay":0.4}'>
            <div class="artists-right">
              <h2 data-rellax-speed="8" class="parallax"><span class="black-artist">Artiste</span></h2>


              <!-- ##################### -->


              <h2><%= link_to 'PROFILE PAGE', artist_path(current_artist.id) %></h2>

              
              <!-- ##################### -->
              

              <ul data-rellax-speed="8" class="parallax">
                <% if artist_signed_in? %>
                  <li> <%= link_to 'Sign out', destroy_artist_session_path, method: :delete, class: "black-artist", class:"li-signup" %> </li>
                  <li class="login-mail">You're logged with the following email : <%= current_artist.email %>.</li>
                  <li> <%= link_to 'Edit account', edit_artist_registration_path, class: "black-artist", class:"li-signup" %> </li>
                <% else %>
                  <li> <%= link_to 'Log in', new_artist_session_path, class: "black-artist", class:"li-signup" %> </li>
                  <li> <%= link_to 'Sign up', new_artist_registration_path, class: "black-artist", class:"li-signup" %> </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
