<section id="default-cta-3">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <%= link_to @project.title, project_path(:id), class:"btn btn-outline-secondary rounded-capsule mt-4" %>
      </div>
    </div>
  </div>

  <!-- end of .container-->


</section>


<!-- <section> begin ============================-->
<section id="default-cta-3">
  <div class="container">
    <div class="row justify-content-center text-center parallax" data-rellax-speed="3">
      <div class="col-lg-8">
        <%= @project.description %>
    </div>
  </div>
</div>
</section>
  <!-- end of .container-->
  <!-- <section> close ============================-->

<section>
  <div class="container">
    <div class="row index-flex parallax" data-rellax-speed="4">
      <div class="col-lg-6">
        <div class="py-9 h-100 position-relative">
            <%= image_tag (@project.uploads[0]), class: "img-fluid2" %>
          <!--/.bg-holder-->
        </div>
      </div>
      <div class="col-lg-6 pl-lg-4 pl-xl-6 mt-4 mt-lg-0">
  			<!--   progressbar a pluger!  -->
        <div class="text-sans-serif fs-1 mb-2"><span class="text-warning font-weight-black"><%= @project.budget %></span><span class="fs-0"> €</span>
        </div>
        <ul class="list-unstyled mt-4">
          <li>
            <h6 class="fs-0 text-900 mb-1"><span class="font-weight-bold">Catégorie artistique:</span><span class="font-weight-normal pl-1"><%= @project.category %></span></h6>
          </li>
          <li>
            <h6 class="fs-0 text-900 mb-1"><span class="font-weight-bold">Délais du projet:</span><span class="font-weight-normal pl-1"><%= @project.duration %></span></h6>
          </li>
          <li>
            <h6 class="fs-0 text-900 mb-1"><span class="font-weight-bold">Portée:</span><span class="font-weight-normal pl-1"><%= @project.scope %></span></h6>
          </li>
          <li>
            <h6 class="fs-0 text-900 mb-1"><span class="font-weight-bold">Lieu de création:</span><span class="font-weight-normal pl-1"><%= @project.show_fav_place %></span></h6>
          </li>
          <li>
            <h6 class="fs-0 text-900 mb-1"><span class="font-weight-bold">Novateur ?</span><span class="font-weight-normal pl-1"><%= @project.innovative %></span></h6>
          </li>
        </ul>
      </div>
    </div>
  </div>
<!-- end of .container-->
</section>



