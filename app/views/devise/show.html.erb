<section class="py-0" id="page-shop" data-zanim-xs='{"delay":0.4,"animation":"zoom-out"}' data-zanim-trigger="scroll">
<div class="bg-holder bg-holder-2" style="background: url(<%= asset_path 'banner.jpg' %>) no-repeat; background-size: cover;" data-zanim-trigger="scroll" data-zanim-lg='{"animation":"zoom-out-slide-right","delay":0.4}'>
</div>
<!--/.bg-holder-->
<div class="container">
  <div class="row justify-content-center text-center py-7">
    <div class="col-lg-9 px-4">
      <h3 class="fs-2 fs-sm-3 text-white text-profile">Welcome<br/>
      </br/><%= current_artist.first_name %> <%= current_artist.last_name %></h3>
      <br/>
    </div>
  </div>
</div>
<!-- end of .container-->

</section>
<!-- <section> close ============================-->
