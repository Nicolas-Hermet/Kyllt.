<!-- begin profile pic-->
<div class="col-12 mt-6">
  <div class="bg-light p-5 rounded">
    <div class="row no-gutters justify-content-right text-center text-sm-left">
      <div class="col-6 col-sm-4 col-md-3 col-lg-4 col-xl-3 align-self-center pr-sm-3 pb-3 pb-sm-0">
        <%= image_tag("profile.jpg", class: " rounded-circle img-fluid", width: '200') %>
      </div>
      <div class="profile-flex" >
        <div class="col-sm">
          <h5><%= @project.artist.first_name.capitalize %> <%= @project.artist.last_name[0].capitalize %></h5>
          <p class="text-sans-serif"><%= @project.artist.biography %></p>
          <br />
          <p class="lead font-italic text-400 px-lg-7">You're currently logged with the following email : <%= current_artist.email %></p>
          <div class="lead text-400 px-lg-11"><%= link_to 'Modifier le profil', edit_artist_registration_path, class:"btn btn-dark btn-sm px-7 mt-4" %></div>
          <div class="lead text-400 px-lg-11"><%= link_to 'Submit a new project', new_project_path, class:"btn btn-danger btn-sm px-7 mt-4" %></div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- end of profile pic-->


