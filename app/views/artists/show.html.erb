<section id="default-cta-3">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <%= link_to @project.title, project_path(:id), class:"btn btn-outline-danger rounded-capsule mt-4" %>
      </div>
    </div>
  </div>

  <!-- end of .container-->


</section>
