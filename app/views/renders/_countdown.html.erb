<section class="py-8 py-lg-11 text-center overflow-hidden" id="studio-funfact">
  <div class="bg-holder overlay overlay-1 " style="background: url(<%= asset_path 'banner4.1.jpg' %>) no-repeat; background-size: cover;" data-rellax-percentage="0.5">
  </div>
  <!--/.bg-holder-->
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-sm-6">
        <div class="text-white"><span class="text-sans-serif font-weight-bold display-4" data-countup=<%= @funded %>> </span>
          <p class="font-italic">Projets financés</p>
        </div>
      </div>
      <div class="col-lg-3 col-sm-6 mt-3 mt-sm-0">
        <div class="text-white"><span class="text-sans-serif font-weight-bold display-4" data-countup=<%= @artists %>> </span>
          <p class="font-italic">Artistes aidés</p>
        </div>
      </div>
      <div class="col-lg-3 col-sm-6 mt-3 mt-lg-0">
        <div class="text-white"><span class="text-sans-serif font-weight-bold display-4" data-countup=<%= @mecenes %>> </span>
          <p class="font-italic">Mécènes heureux</p>
        </div>
      </div>
      <div class="col-lg-3 col-sm-6 mt-3 mt-lg-0">
        <div class="text-white"><span class="text-sans-serif font-weight-bold display-4" data-countup=<%= @distributed_dividends %>> </span>
          <p class="font-italic">Euros reversés</p>
        </div>
      </div>
    </div>
  </div>
  <!-- end of .container-->
</section>
